{
  "logger": {
    "console": {
      "handleExceptions": false,
      "level": "error",
      "colorize": true,
      "prettyPrint": true
    }
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "interval": 1000
  },
  "server": {
    "mailer": {
      "tls": {
        "rejectUnauthorized": false
      },
      "queuePrefix": "restore.q",
      "host": "mail.example.com",
      "port": 25,
      "auth": {
        "user": "test@example.com",
        "pass": "testPassword"
      },
      "address": "'restorecommerce' <noreply@restorecommerce.io>"
    },
    "transports": [
      {
        "name": "notificationGRPC",
        "provider": "grpc",
        "services": {
          "io-restorecommerce-notification-srv": "io.restorecommerce.notification.Service",
          "io-restorecommerce-notification-cis": "io.restorecommerce.commandinterface.Service"
        },
        "addr": "localhost:50052",
        "protos": [
          "io/restorecommerce/notification.proto",
          "io/restorecommerce/commandinterface.proto"
        ],
        "protoRoot": "node_modules/@restorecommerce/protos/"
      }
    ],
    "services": {
      "io-restorecommerce-notification-srv": {
        "send": {
          "transport": [
            "notificationGRPC"
          ]
        }
      },
      "io-restorecommerce-notification-cis": {
        "command": {
          "transport": [
            "notificationGRPC"
          ]
        }
      }
    }
  },
  "command-interface": {
    "name": "io-restorecommerce-notification-cis"
  },
  "client": {
    "service": {
      "transports": {
        "grpc": {
          "service": "io.restorecommerce.notification.Service",
          "timeout": 3000,
          "protos": [
            "io/restorecommerce/notification.proto"
          ],
          "protoRoot": "node_modules/@restorecommerce/protos/"
        }
      },
      "endpoints": {
        "send": {
          "loadbalancer": {
            "name": "roundRobin"
          },
          "publisher": {
            "name": "static",
            "instances": [
              "grpc://localhost:50052"
            ]
          }
        }
      }
    }
  },
  "events": {
    "kafka": {
      "provider": "kafka",
      "groupId": "restore-notification-srv",
      "clientId": "restore-notification-srv",
      "connectionString": "localhost:2181",
      "commandTopic": "io.restorecommerce.command",
      "sendEmail": {
        "protos": [
          "io/restorecommerce/notification.proto"
        ],
        "protoRoot": "node_modules/@restorecommerce/protos/",
        "messageObject": "io.restorecommerce.notification.Notification"
      },
      "healthCheckCommand": {
        "protos": [
          "io/restorecommerce/commandinterface.proto"
        ],
        "protoRoot": "node_modules/@restorecommerce/protos/",
        "messageObject": "io.restorecommerce.commandinterface.HealthCheckRequest"
      },
      "healthCheckResponse": {
        "protos": [
          "io/restorecommerce/commandinterface.proto"
        ],
        "protoRoot": "node_modules/@restorecommerce/protos/",
        "messageObject": "io.restorecommerce.commandinterface.HealthCheckResponse"
      },
      "topics": {
        "notification": {
          "topic": "io.restorecommerce.notification",
          "events": [
            "sendEmail"
          ]
        },
        "command":{
          "topic": "io.restorecommerce.command",
          "events": [
            "healthCheckCommand"
          ]
        }
      }
    }
  }
}
