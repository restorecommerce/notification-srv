{
  "name": "@restorecommerce/notification-srv",
  "version": "0.0.9",
  "description": "Restore Commerce notification microservice",
  "main": "start.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/notification-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "notification"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "github:restorecommerce/chassis-srv",
    "@restorecommerce/cluster-service": "^0.1.1",
    "@restorecommerce/kafka-client": "github:restorecommerce/kafka-client",
    "@restorecommerce/logger": "^0.1.6",
    "@restorecommerce/mailer": "^0.1.2",
    "@restorecommerce/protos": "github:restorecommerce/protos",
    "@restorecommerce/service-config": "^0.1.1",
    "cross-env": "^5.2.0",
    "lodash": "^4.17.10",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@restorecommerce/grpc-client": "github:restorecommerce/grpc-client",
    "@types/mocha": "^5.2.5",
    "coveralls": "^3.0.2",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "should": "^13.2.3",
    "tslint": "^5.11.0"
  },
  "scripts": {
    "start": "npm run createtopics && node start.js",
    "dev": "cross-env NODE_ENV=development npm run createtopics && node start.js",
    "pretest": "npm run tsctests && npm run createtopics",
    "test": "cross-env NODE_ENV=test npm run lint && npm run mocha",
    "lint": "cross-env NODE_ENV=development tslint lib/*.ts *_test.ts service.ts start.ts",
    "mocha": "cross-env NODE_ENV=test mocha -R spec --timeout 60000 test/notification_test.js --stack-trace --exit",
    "coveralls": "cross-env NODE_ENV=test istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- -R spec test/*.js --exit",
    "test-debug": "cross-env NODE_ENV=test mocha test/*.js --inspect-brk --exit",
    "createtopics": "node setupTopics.js io.restorecommerce.notification io.restorecommerce.command",
    "postinstall": "tsc -d",
    "tsctests": "tsc test/notification_test.ts --module commonjs -target ES6"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
