{
  "name": "@restorecommerce/notification-srv",
  "version": "0.1.0",
  "description": "Restore Commerce notification microservice",
  "main": "start.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/notification-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "notification"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "github:restorecommerce/chassis-srv",
    "@restorecommerce/cluster-service": "^0.1.0",
    "@restorecommerce/kafka-client": "github:restorecommerce/kafka-client",
    "@restorecommerce/logger": "^0.1.0",
    "@restorecommerce/mailer": "^0.1.0",
    "@restorecommerce/service-config": "^0.1.0",
    "@restorecommerce/protos": "github:restorecommerce/protos",
    "co": "^4.6.0",
    "lodash": "^4.17.2"
  },
  "devDependencies": {
    "@restorecommerce/grpc-client": "github:restorecommerce/grpc-client",
    "@types/mocha": "^2.2.39",
    "@types/should": "^11.2.0",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "should": "^11.2.1"
  },
  "scripts": {
    "start": "npm run createtopics && node start.js",
    "dev": "export NODE_ENV=development; npm run createtopics && node start.js",
    "pretest": "npm run tsctests && npm run createtopics",
    "test": "export NODE_ENV=test;  npm run lint && npm run mocha",
    "lint": "export NODE_ENV=development; tslint './lib/*.ts' './*_test.ts' './service.ts' './start.ts'",
    "mocha": "export NODE_ENV=test;  mocha -R spec --timeout 60000 ./test/*.js --stack-trace --exit",
    "coveralls": "export NODE_ENV=test;  istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec ./test/*.js --exit",
    "test-debug": "export NODE_ENV=test;  mocha ./test/*.js --inspect-brk --exit",
    "createtopics": "node setupTopics.js io.restorecommerce.notification io.restorecommerce.command",
    "postinstall": "tsc -d",
    "tsctests": "tsc test/*.ts --module commonjs -target ES6"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
