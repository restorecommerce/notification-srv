{
  "name": "@restorecommerce/notification-srv",
  "version": "0.0.1",
  "description": "Restore Commerce notification microservice",
  "main": "start.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/notification-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "notification"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "github:restorecommerce/chassis-srv",
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/kafka-client": "^0.1.2",
    "@restorecommerce/logger": "^0.1.10",
    "@restorecommerce/mailer": "^0.1.4",
    "@restorecommerce/protos": "github:restorecommerce/protos",
    "@restorecommerce/service-config": "^0.1.4",
    "lodash": "^4.17.14"
  },
  "devDependencies": {
    "@restorecommerce/grpc-client": "github:restorecommerce/grpc-client",
    "@types/mocha": "^5.2.7",
    "coveralls": "^3.0.6",
    "cross-env": "^5.2.1",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "should": "^13.2.3",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "start": "npm run createtopics && node start.js",
    "dev": "cross-env NODE_ENV=development npm run createtopics && node start.js",
    "pretest": "npm run tsctests && npm run createtopics",
    "test": "cross-env NODE_ENV=test npm run lint && nyc npm run mocha",
    "lint": "tslint lib/*.ts *_test.ts service.ts start.ts interfaces.ts",
    "mocha": "cross-env NODE_ENV=test mocha -R spec --timeout 60000 test/notification_test.js --stack-trace --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test-debug": "cross-env NODE_ENV=test mocha test/*.js --inspect-brk --exit",
    "createtopics": "node setupTopics.js io.restorecommerce.notification io.restorecommerce.command",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf service.js start.js interfaces.js lib/*.js",
    "build": "npm-run-all lint build:clean build:tsc"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
