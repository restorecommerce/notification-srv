{
  "name": "@restorecommerce/notification-srv",
  "version": "1.1.0",
  "description": "Restorecommerce notification microservice",
  "main": "lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/notification-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "notification"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "^1.3.1",
    "@restorecommerce/cluster-service": "^1.0.1",
    "@restorecommerce/grpc-client": "^2.0.3",
    "@restorecommerce/kafka-client": "^1.1.1",
    "@restorecommerce/logger": "^1.2.4",
    "@restorecommerce/mailer": "^1.0.4",
    "@restorecommerce/rc-grpc-clients": "^5.1.1",
    "@restorecommerce/service-config": "^1.0.6",
    "lodash": "^4.17.21",
    "retry": "^0.13.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/eslint-plugin-tslint": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "eslint-plugin-prefer-arrow-functions": "^3.1.4",
    "mocha": "^10.1.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.1",
    "should": "^13.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "start": "node lib/start.js",
    "dev": "cross-env NODE_ENV=development && nodemon --watch './src/**/*.ts' --exec 'ts-node' src/start.ts",
    "pretest": "npm run build",
    "test": "cross-env NODE_ENV=test npm run lint && nyc npm run mocha",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha -R spec --timeout 60000 --stack-trace --exit",
    "lcov-report": "nyc report --reporter=lcov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test-debug": "cross-env NODE_ENV=test mocha test/*.js --inspect-brk --exit",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc"
  },
  "engines": {
    "node": ">= 18.0.0"
  }
}
