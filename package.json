{
  "name": "@restorecommerce/notification-srv",
  "version": "0.2.8",
  "description": "Restorecommerce notification microservice",
  "main": "lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/notification-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "notification"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "^0.3.5",
    "@restorecommerce/cluster-service": "^0.1.10",
    "@restorecommerce/grpc-client": "^0.2.14",
    "@restorecommerce/kafka-client": "^0.2.29",
    "@restorecommerce/logger": "^0.11.3",
    "@restorecommerce/mailer": "^0.1.15",
    "@restorecommerce/protos": "^0.4.11",
    "@restorecommerce/service-config": "^0.4.23",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.13",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "eslint-plugin-prefer-arrow-functions": "^3.1.4",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "start": "node lib/start.js",
    "dev": "cross-env NODE_ENV=development && nodemon --watch './src/**/*.ts' --exec 'ts-node' src/start.ts",
    "pretest": "npm run build",
    "test": "cross-env NODE_ENV=test npm run lint && nyc npm run mocha",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha -R spec --timeout 60000 --stack-trace --exit",
    "lcov-report": "nyc report --reporter=lcov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test-debug": "cross-env NODE_ENV=test mocha test/*.js --inspect-brk --exit",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc"
  },
  "engines": {
    "node": ">= 16.0.0"
  }
}
