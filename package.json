{
  "name": "@restorecommerce/notification-srv",
  "version": "0.0.1",
  "description": "Restore Commerce notification microservice",
  "main": "lib/start.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/notification-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "notification"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "^0.1.2",
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/grpc-client": "0.0.6",
    "@restorecommerce/kafka-client": "^0.1.10",
    "@restorecommerce/logger": "^0.1.16",
    "@restorecommerce/mailer": "^0.1.9",
    "@restorecommerce/protos": "0.0.8",
    "@restorecommerce/service-config": "^0.2.0",
    "lodash": "^4.17.19"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/eslint-plugin-tslint": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.5.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "start": "npm run createtopics && node lib/start.js",
    "dev": "cross-env NODE_ENV=development npm run createtopics && nodemon --watch './src/**/*.ts' --exec 'ts-node' src/start.ts",
    "pretest": "npm run build && npm run tsctests && npm run createtopics",
    "test": "cross-env NODE_ENV=test npm run lint && nyc npm run mocha",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha -R spec --timeout 60000 test/notification_test.js --stack-trace --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test-debug": "cross-env NODE_ENV=test mocha test/*.js --inspect-brk --exit",
    "createtopics": "node setupTopics.js io.restorecommerce.notification io.restorecommerce.command",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "healthcheck": "node lib/healthcheck.js"
  },
  "engines": {
    "node": ">= 12.0.0"
  }
}
